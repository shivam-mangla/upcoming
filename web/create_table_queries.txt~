CREATE TABLE  `a9947257_events`.`users` (
`user_id` INT( 30 ) NOT NULL AUTO_INCREMENT ,
`username` VARCHAR( 30 ) NOT NULL ,
`password` VARCHAR( 100 ) NOT NULL ,
`contact` VARCHAR( 20 ) NOT NULL ,
`email` VARCHAR( 30 ) NOT NULL ,
`isAdmin` BOOL NOT NULL DEFAULT  '0',
PRIMARY KEY (  `user_id` ) ,
UNIQUE (
`user_id`
)
) ENGINE = MYISAM COMMENT =  'This table contains data of all users.


CREATE TABLE  `a9947257_events`.`rsvp` (
`rsvp_id` INT NOT NULL AUTO_INCREMENT ,
`event_id` INT NOT NULL ,
`user_id` INT NOT NULL ,
`rsvp_status` VARCHAR( 20 ) NOT NULL DEFAULT  'invited',
PRIMARY KEY (  `rsvp_id` ) ,
UNIQUE (
`rsvp_id`
)
) ENGINE = MYISAM


CREATE TABLE  `a9947257_events`.`events` (
`event_id` INT NOT NULL AUTO_INCREMENT ,
`name` VARCHAR( 30 ) NOT NULL,
`description` TEXT NOT NULL,
`start_datetime` DATETIME,
`end_datetime` DATETIME,
`category` TEXT NOT NULL,
`link` VARCHAR( 100 ) NOT NULL,
PRIMARY KEY (  `event_id` ) ,
UNIQUE (
`event_id`
)
) ENGINE = MYISAM
